{
  "manifest_version": 3,
  "name": "FocusPulse",
  "version": "1.0",
  "description": "Base Level Extension",
  "action": {
    "default_popup": "index.html",
    "default_icon": "Logo-DJjvocO9.png"
  },
  "permissions": ["scripting", "history", "storage", "idle", "notifications"],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
