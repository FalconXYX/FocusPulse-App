{
  "manifest_version": 3,
  "name": "FocusPulse",
  "version": "1.0",
  "description": "Gamify your productivity! FocusPulse is a productivity tool that helps you stay focused and take breaks.",
  "icons": {
    "24": "Logo-24-Bn8nKoTA.png",
    "48": "Logo-48-Dt0KEiXk.png",
    "128": "Logo-128-Cg3Ef7_8.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "Logo-128-Cg3Ef7_8.png"
  },
  "permissions": ["scripting", "history", "storage", "idle", "notifications"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
